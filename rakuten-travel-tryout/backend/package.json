{
  "name": "express-prisma-tryout",
  "version": "1.0.0",
  "description": "https://blog.logrocket.com/how-to-set-up-node-typescript-express/",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate_reset": "npx prisma migrate reset",
    "migrate_dev": "npx prisma migrate dev",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "format": "npx prettier --loglevel warn --write \"**/*.{js,css,html,jsx,tsx,ts,json}\"",
    "gitSync": "git fetch --all && git pull --all ",
    "gitUpdate": "git add . && git commit -m \"update express-prisma-tryout,\" && yarn gitSync && git push",
    "dev": "NODE_ENV=development concurrently -k \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "test_ts_node": "npx ts-node ./index.ts",
    "gen_erd": "npx prisma generate",
    "db_push": "npx prisma db push --accept-data-loss --force-reset",
    "db_seed": "npx prisma db seed",
    "db_reset": "npm run rm_db && npm run db_push && npm run db_seed",
    "rm_db": "rm -rf ./prisma/dev.db"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@mermaid-js/mermaid-cli": "^9.3.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/node-cron": "^3.0.7",
    "@types/nodemailer": "^6.4.7",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.8.1",
    "prisma-erd-generator": "^1.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
